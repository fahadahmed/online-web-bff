{
  "name": "online-web-frontend",
  "config": {
    "baseBranch": "origin/master"
  },
  "repository": "https://sparknz@dev.azure.com/sparknz/Spark/_git/online-web-frontend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 16.3.0",
    "yarn": ">= 1.22.0"
  },
  "scripts": {
    "build:verify": "lerna run --stream build --since $npm_package_config_baseBranch",
    "build": "lerna run --stream build",
    "lint": "export NODE_OPTIONS='--max-old-space-size=4096' && eslint $(git diff --name-only --diff-filter=d $npm_package_config_baseBranch | egrep \"\\.(js|ts|tsx)$\" | egrep -v \"(generated|types)\")",
    "lint:fix": "yarn run lint --fix",
    "prettier": "prettier --check $(git diff --name-only --diff-filter=d $npm_package_config_baseBranch)",
    "prettier:fix": "prettier --write .",
    "prettier:fix-changed": "prettier --write $(git diff --name-only --diff-filter=d $npm_package_config_baseBranch)",
    "bump": "yarn changeset version",
    "change": "yarn changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/graphql-resolve-batch": "^1.1.5",
    "@types/invariant": "2.2.34",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/lokijs": "^1.5.6",
    "@types/qs": "^6.9.7",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.5",
    "camelcase": "^6.2.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8",
    "graphql": "^14.7.0",
    "husky": "^4.2.3",
    "isomorphic-fetch": "3.0.0",
    "jest": "^26.6.1",
    "jest-config": "^26.6.1",
    "jest-sonar-reporter": "^2.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^11.0.0",
    "msw": "^0.36.8",
    "node-fetch": "^2.6.1",
    "openapi-typescript": "^3.2.2",
    "prettier": "2.3.0",
    "querystring": "^0.2.1",
    "rollup": "^2.75.3",
    "ts-jest": "^26.4.3",
    "tslib": "^2.4.0",
    "typescript": "~4.7.3"
  }
}
